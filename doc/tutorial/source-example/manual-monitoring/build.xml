<project name="Bookstore-Application" basedir="." default="run-monitoring">

  <property name="lib.dir" value="lib"/>
  <property name="build.dir" value="build"/>
  <property name="src.dir" value="src"/>
  <property name="jar.file.monitoring" value="BookstoreMonitoring.jar"/>
  <property name="jar.file.analysis" value="BookstoreAnalysis.jar"/>
  <property name="main-class-monitoring" value="bookstoreApplication.BookstoreStarter"/>
  <property name="main-class-analysis" value="bookstoreApplication.BookstoreAnalysisStarter"/>
  <property name="meta.dir" value="META-INF"/>
  <property name="log4jproperties.file" value="log4j.properties"/>
  
  <path id="classpath">
    <fileset dir="${lib.dir}" includes="**/*.jar"/>
  </path>
  
  <target name="run-monitoring" depends="build-jar-monitoring">
    <java fork="true" classname="${main-class-monitoring}">
      <classpath>
	<path refid="classpath"/>
	<path location="${jar.file.monitoring}"/>
      </classpath>
      <jvmarg value="-Dlog4j.configuration=${meta.dir}/${log4jproperties.file}"/>
    </java>
  </target>
  
  <target name="run-analysis" depends="build-jar-analysis">
    <java fork="true" classname="${main-class-analysis}">
	  <arg line="${ananalysis.directory}"/>
      <classpath>
	    <path refid="classpath"/>
	    <path location="${jar.file.analysis}"/>
      </classpath>
      <jvmarg value="-Dlog4j.configuration=${meta.dir}/${log4jproperties.file}"/>
    </java>
  </target>
  
  <target name="build-jar-monitoring" depends="compile">
    <jar destfile="${jar.file.monitoring}" basedir="${build.dir}">
      <manifest>
	<attribute name="Main-Class" value="${main-class-monitoring}"/>
      </manifest>
    </jar>
    <delete dir="${build.dir}"/>
  </target>

  <target name="build-jar-analysis" depends="compile">
    <jar destfile="${jar.file.analysis}" basedir="${build.dir}">
      <manifest>
	<attribute name="Main-Class" value="${main-class-analysis}"/>
      </manifest>
    </jar>
    <delete dir="${build.dir}"/>
  </target>
  
  <target name="compile" depends="init">
      <javac srcdir="${src.dir}" destdir="${build.dir}" classpathref="classpath"/>
      <mkdir dir="${build.dir}/${meta.dir}"/>
  </target>
  
  <target name="init">
    <delete dir="${build.dir}"/>
    <mkdir dir="${build.dir}"/>
  </target>
  
</project>
